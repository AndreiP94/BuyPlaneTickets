@page
@model ProjectBileteAvion.Pages.Bilete.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Adaugare bilete</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bilet.ZborID" class="control-label"></label>
                <select asp-for="Bilet.ZborID" class ="form-control" asp-items="ViewBag.ZborID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Bilet.PasagerID" class="control-label"></label>
                <select asp-for="Bilet.PasagerID" class ="form-control" asp-items="ViewBag.PasagerID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Bilet.Clasa" class="control-label"></label>
                <input asp-for="Bilet.Clasa" class="form-control" />
                <span asp-validation-for="Bilet.Clasa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bilet.Pret" class="control-label"></label>
                <input asp-for="Bilet.Pret" class="form-control" />
                <span asp-validation-for="Bilet.Pret" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <input type="submit" value="Create" class="btn button-stilizat" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
